	echo "test failed - producer and consumer3 databases differ"
	exit 1
fi

echo "Using ldapmodify to delete entries from consumer1..."
$LDAPMODIFY -D "$MANAGERDN" -H $URI2 -w $PASSWD \
	>> $TESTOUT 2>&1 << EOADDS
dn: cn=To be deleted by consumer1,dc=example,dc=com
changetype: delete
EOADDS
