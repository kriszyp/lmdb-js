NT_yes_DYN_MODDEFS	= $(DYN_DEFS)
NT_yes_STAT_MODDEFS	=

MODDEFS = $(@PLAT@_@BUILD_LDBM@_@LIB_LINKAGE@_MODDEFS)

LIBBASE = back_ldbm

XINCPATH = -I.. -I$(srcdir)/..
XDEFS = $(MODULES_CPPFLAGS)

all-local-lib:	../.backend

../.backend: lib$(LIBBASE).a
	@touch $@

